<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.nicemorning.mymirror.activity.HintActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_3"
        android:background="@drawable/back_shape_white"
        android:gravity="center"
        android:text="@string/changeLight"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18"
        tools:ignore="SpUsage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="UselessLeaf" />

    <TextView
        android:id="@+id/i_know"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/an"
        android:gravity="center"
        android:text="@string/i_know"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18"
        tools:ignore="SpUsage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@drawable/back_shape_white"
        android:gravity="center"
        android:text="@string/changeZoom"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18"
        tools:ignore="SpUsage" />


</LinearLayout>
